@model BookWyrm.Data.ViewModels.BookViewModel

@{
    ViewBag.Title = Model.Title + " Details";
}

<style>
    td {
        padding: 10px;
    }

        td:first-of-type {
            text-align: right;
        }
</style>


<h2>@Model.Title Details</h2>

<hr />

<table>
    <tr>
        <td><strong>@Html.DisplayNameFor(model => model.Title):</strong></td>
        <td>@Html.DisplayFor(model => model.Title)</td>
    </tr>
    <tr>
        <td><strong>@Html.DisplayNameFor(model => model.Author):</strong></td>
        <td>@Html.DisplayFor(model => model.Author)</td>
    </tr>
    <tr>
        <td><strong>@Html.DisplayNameFor(model => model.YearPublished):</strong></td>
        <td>@Html.DisplayFor(model => model.YearPublished)</td>
    </tr>
    <tr>
        <td><strong>@Html.DisplayNameFor(model => model.Genre):</strong></td>
        <td>@Html.DisplayFor(model => model.Genre)</td>
    </tr>
    <tr>
        <td><strong>@Html.DisplayNameFor(model => model.Keywords):</strong></td>
        <td>@Html.DisplayFor(model => model.Keywords)</td>
    </tr>
    <tr>
        <td><strong>@Html.DisplayNameFor(model => model.Description):</strong></td>
        <td>@Html.DisplayFor(model => model.Description)</td>
    </tr>
    <tr>
        <td><strong>@Html.DisplayNameFor(model => model.ISBN):</strong></td>
        <td>@Html.DisplayFor(model => model.ISBN)</td>
    </tr>
    <tr>
        <td><strong>@Html.DisplayNameFor(model => model.Barcode):</strong></td>
        <td>@Html.DisplayFor(model => model.Barcode)</td>
    </tr>
    <tr>
        <td><strong>@Html.DisplayNameFor(model => model.MinAgeReq):</strong></td>
        <td>@Html.DisplayFor(model => model.MinAgeReq)</td>
    </tr>
    <tr>
        <td><strong>@Html.DisplayNameFor(model => model.HiddenNotes):</strong></td>
        <td>@Html.DisplayFor(model => model.HiddenNotes)</td>
    </tr>
</table>


<br />


<a href="@Url.Action("Edit", "Book", new { id = Model.BookId })" class="hoverable-link">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true" style="text-decoration: none !important; margin-right: 5px;"></span>
    <span>Edit</span>
</a>
<span style="margin: 0px 10px;">|</span>
<a href="@Url.Action("Delete", "Book", new { id = Model.BookId })" class="hoverable-link">
    <span class="glyphicon glyphicon-trash" aria-hidden="true" style="text-decoration: none !important; margin-right: 5px;"></span>
    <span>Delete</span>
</a>


<br />
<br />
<br />


<a href="@Url.Action("Index", "Book")" class="hoverable-link">
    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true" style="text-decoration: none !important; margin-right: 5px;"></span>
    <span>Back to list</span>
</a>


@model IEnumerable<BookWyrm.Data.ViewModels.TransactionTableViewModel>

@{
    ViewBag.Title = "Transaction Table";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    th, td {
        text-align: center;
    }

        td:last-of-type {
            text-align: left;
        }
</style>




<!-- TODO: Form here to increase/decrease balance -->
@using (Html.BeginForm("AddTransaction", "ApplicationUser", FormMethod.Post, new { @class = "form-group" }))
{
    @Html.AntiForgeryToken()
    <!-- <div class="input-group add-on">
        <input type="text" name="query" value="" placeholder="Search" class="form-control" />
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div> -->
}




<h2>Transaction History for "@ViewData["FullName"]"</h2>



<hr />



<table class="table table-striped">
    <tr>
        <th>Date Applied</th>
        <th>Amount</th>
        <th>Book Title</th>
        <th>Book Author</th>
        <th>Notes</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.DateApplied)</td>
            <td>@string.Format("{0:C}", item.Amount)</td>
            <td>@Html.DisplayFor(modelItem => item.BookTitle)</td>
            <td>@Html.DisplayFor(modelItem => item.BookAuthor)</td>
            <td>@Html.DisplayFor(modelItem => item.Notes)</td>
        </tr>
    }

</table>





